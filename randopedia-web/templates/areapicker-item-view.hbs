
{{#if view.isExpanded}}
    {{#if children}}
        <a href="#" class="areatree-expand" {{action "toggleExpandChildren" target="view"}}><span class="glyphicon glyphicon-minus"></span></a>
    {{else}}
        <span class="intent"></span>
    {{/if}}
{{else}}
    {{#if children}}
        <a href="#" class="areatree-expand" {{action "toggleExpandChildren" target="view"}}><span class="glyphicon glyphicon-plus"></span></a>
    {{else}}
        <span class="intent"></span>
    {{/if}}
{{/if}}

{{#if view.isSelected}}
    <button class="areatree is-selected">{{name}}</button>  
{{else}}  
    <button class="areatree" {{action "selectArea" target="view"}}>{{name}}</button>
{{/if}}

{{#if view.isExpanded}}

	{{#each children}}
	
	    <div class="intent-child">{{view App.AreaPickerItemView itemBinding="this"}}</div>
	
	{{/each}}

{{/if}}
