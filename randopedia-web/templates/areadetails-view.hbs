<div class="full-page-view-container">

	<div class="row">
	    <div class="col-sm-10">
	        <h2>{{name}} {{#if parent}}{{#linkTo "area" parent}}<span class="small uppercase">{{parent.name}}</span>{{/linkTo}}{{/if}}</h2>
	    </div>
	    
	    <div class="col-sm-2">
	        {{#if controllers.login.isLoggedIn}}  
	        {{#unless isRootArea}}
	        	<h3><a class="pull-right" {{action "editArea"}}><span class="glyphicon glyphicon-edit"></span></a></h3>
	        {{/unless}}
	        {{/if}}
	    </div>
	</div>
	
	{{#if description}}
	<div class="row">
	    <div class="col-sm-12 col-lg-10">
	        <pre class="formatted-desc">{{{ markedDescription }}}</pre>
	    </div>
	</div>
	{{/if}}
	
	{{#if children}}
	<div class="row">
		<div class="col-sm-12">
		    <h3>Areas</h3>
		    <ul class="inline-list">
		     {{#each child in children}}
		         <li>
			         {{#linkTo "area" child}} {{child.name}} {{/linkTo}} 
			         {{!--
			         {{#if child.hasTours }}
			             ({{ child.nbrTours }} tours) 
			         {{/if}}
			         --}}
		         </li>
		     {{/each}}
		     </ul>
		</div>
	</div>
	{{/if}}
	
	{{#unless isReadOnlyArea}}
		{{#if hasTours}}
			<div class="row">
			    <div class="col-sm-12">
			        <h4>Tours</h4>
			        {{#if content.isUpdating}}
			            <div>Loading...</div>
			        {{/if}}
			        {{#each tour in tours}}
			            {{view App.TourItemView}}
			        {{/each}}  
			    </div>
			</div>
		{{/if}}
	{{/unless}}

</div>



