            <li class="nav-item btn-group">
                <a class="dropdown-toggle nav-link" href="#" type="button" id="languageDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{text "header_language"}}
                </a>
                <div class="dropdown-menu" aria-labelledby="languageDropdown">
                    {{#if language.isNorwegian}}
                    <a class="dropdown-item" {{action "setlanguage"}}><i class="fa fa-circle-o"></i> English</a>
                    <span class="dropdown-item dropdown-item"><i class="fa fa-check-circle"></i> Norsk</span>
                    {{else}}
                    <span class="dropdown-item"><i class="fa fa-check-circle"></i> English</span>
                    <a class="dropdown-item" {{action "setlanguage" "no"}}><i class="fa fa-circle-o"></i> Norsk</a>
