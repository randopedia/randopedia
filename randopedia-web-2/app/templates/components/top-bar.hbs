<div class="top-bar">

    <nav class="navbar navbar-light bg-faded">
        
        <a class="navbar-brand logo" {{action "topbarmenulink" "index" }}>Randopedia</a>

        <button class="navbar-toggler hidden-lg-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>

    <!--class={{showNavbarSearch:pressed}}-->
        <button class="btn btn-secondary search-button nav-item float-xs-right" {{action "toggleNavbarSearchbox" }} >
            <i class="fa fa-search" aria-hidden="true"></i>
        </button>

        <div class="collapse navbar-toggleable-md" id="navbarResponsive">

            <ul class="nav navbar-nav">
                
                <li class="nav-item">
                    <a {{action "topbarmenulink" "index" }} class="nav-link">{{text "header_map"}}</a>
                </li>
                
                <li class="nav-item">
                    <a {{action "topbarmenulink" "dashboard" }} class="nav-link">{{text "header_dashboard"}}</a>
                </li>
                
                <li class="nav-item">
                    <a {{action "topbarmenulink" "about" }} class="nav-link">{{text "header_about"}}</a>
                </li>
                
                {{#if login.isLoggedIn}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="toursNavbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{text "header_tours"}}</a>
                    <div class="dropdown-menu" aria-labelledby="toursNavbarDropdown">
                        <a class="dropdown-item" {{action "topbarmenulink" "tour.new" }}>{{text "header_addNewTour"}}</a>
                        <a class="dropdown-item" {{action "topbarmenulink" "mytours" }}>{{text "header_myTours"}}</a>
                        <a class="dropdown-item" {{action "topbarmenulink" "review" }}>{{text "header_toursInReview"}}</a>
                    </div>
                </li>
                {{/if}}

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageNavbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{text "header_language"}}</a>
                    <div class="dropdown-menu" aria-labelledby="languageNavbarDropdown">
                    {{#if language.isNorwegian}}
                        <a class="dropdown-item" {{action "setlanguage"}}><i class="fa fa-square-o"></i> English</a>
                        <span class="dropdown-item dropdown-item"><i class="fa fa-check-square-o"></i> Norsk</span>
                        {{else}}
                        <span class="dropdown-item"><i class="fa fa-check-square-o"></i> English</span>
                        <a class="dropdown-item" {{action "setlanguage" "no"}}><i class="fa fa-square-o"></i> Norsk</a>
                        {{/if}}
                    </div>
                </li>

                <li class="nav-item"><a {{action "topbarmenulink" "collapseNavbar" }} data-toggle="modal" data-target="#loginViewModalId" class="nav-link">{{text "header_addTour"}}</a></li>

                <li class="nav-item dropdown">
                    {{#if login.isLoggedIn}}
                    <a class="nav-link dropdown-toggle" href="#" id="userNavbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i></a>
                    <div class="dropdown-menu" aria-labelledby="userNavbarDropdown">
                        <a {{action "logout" }} class="dropdown-item">{{text "header_logout"}}</a>
                        <p class="dropdown-item">{{text "header_loggedInAs"}} {{maxString login.currentUser.userName 50}}</p>
                    </div>
                    {{else}}
                    <li class="nav-item"><a {{action "topbarmenulink" "collapseNavbar" }} data-toggle="modal" data-target="#loginViewModalId" class="">{{text "header_login"}}</a></li>
                    {{/if}}
                </li>

                <li class="nav-item hidden-sm-down float-md-right">
                    <div class="fb-like" data-href="https://www.facebook.com/randopedia.net" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
                </li>

            </ul>

        </div>
    </nav>

    {{#if showNavbarSearch}}
        {{!-- search-component store=store --}}
    {{/if}}

    <div class="modal fade" id="loginViewModalId" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        {{login-form}}
    </div>

</div>