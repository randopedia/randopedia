                <a class="dropdown-toggle nav-link" href="#" type="button" id="toursDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{text "header_tours"}}
                </a>
                <div class="dropdown-menu" aria-labelledby="toursDropdown">
                    <a class="dropdown-item" {{action "topbarmenulink" "tour.new" }}>{{text "header_addNewTour"}}</a>
                    <a class="dropdown-item" {{action "topbarmenulink" "mytours" }}>{{text "header_myTours"}}</a>
                    <a class="dropdown-item" {{action "topbarmenulink" "review" }}>{{text "header_toursInReview"}}</a>
                </div>
            </li>

            <li class="nav-item btn-group">
                <a class="dropdown-toggle nav-link" href="#" type="button" id="toursDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    user
                </a>
                <div class="dropdown-menu" aria-labelledby="toursDropdown">
                    <a {{action "logout" }}>{{text "header_logout"}}</a>
                    <p>{{text "header_loggedInAs"}} {{maxString login.currentUser.userName 50}}</p>
                </div>
            </li>

            <li class="nav-item"><a {{action "topbarmenulink" "collapseNavbar" }} data-toggle="modal" data-target="#loginViewModalId" class="hvr-underline-from-center">{{text "header_addTour"}}</a></li>

