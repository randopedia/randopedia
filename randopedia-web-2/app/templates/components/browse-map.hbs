<div class="browse-map-view full-screen">
    <div id="tourMapRootElement" class="full-screen"></div>
    {{#if waitingForPosition}}
    <div class="loading-data">
        {{text "map_waitingForPosition"}}...
    </div>
    {{/if}}
    <button class="btn btn-primary btn-my-position" {{action "toggleMyPositionAction" }}>
        <i class="fa fa-map-marker"></i>
    </button>
    {{#if tour}}
    <div class="tour-info load-animation">
        <h4>
            <button type="button" class="close" {{action "closeInfoWindowAction" }}><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            {{#link-to "tour" tour.id}} {{tour.name}} {{/link-to}} <span class="small">({{tour.elevationMax}}m)</span>
        </h4>
        <div>
            {{resolve-select-name 'Grades' tour.grade}} |
            {{tour.timingMin}}-{{tour.timingMax}}h |
            {{tour.elevationGain}}m &uarr; {{tour.elevationLoss}}m &darr;
        </div>
        <div class="link-container">
            <span><a {{action "zoomToSelectedTourAction"}}>{{text "map_zoomInOnMap"}}</a></span>
            <span>{{#link-to "tour" tour.id}} {{text "map_viewTourDetails"}} {{/link-to}}</span>
        </div>
        <div class="checkbox">
            <label class={{if showOnlySelectedToursPaths "checked" }}>
                {{input type="checkbox" checkedBinding="showOnlySelectedToursPaths" class="hide"}}
                <span class="glyphicon glyphicon-ok"></span>
                <span>{{text "map_hideOtherTours"}}</span>
            </label>
        </div>
    </div>
    {{/if}}
</div>
