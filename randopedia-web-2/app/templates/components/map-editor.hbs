<div class="map-editor">
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group spacing-x-large">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-plus"></span> {{text "map_addPath"}}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" {{action "drawUpDownTrack"}}><span class="glyphicon glyphicon-sort"></span> {{text "map_upDown"}}</a></li>
                        <li><a href="#" {{action "drawUpTrack"}}><span class="glyphicon glyphicon-arrow-up"></span> {{text "map_up"}}</a></li>
                        <li><a href="#" {{action "drawDownTrack"}}><span class="glyphicon glyphicon-arrow-down"></span> {{text "map_down"}}</a></li>
                    </ul>
                    <button class="btn btn-default" {{bind-attr disabled="hasSummitPointMarker" }} {{action "drawSummitPoint"  }}>
                        <span class="glyphicon glyphicon-map-marker"></span> {{text "map_summitPoint"}}
                    </button>
                </div>

                <div class="btn-group spacing-x-large">
                    <button class="btn btn-default" data-toggle="modal" data-target="#editPathsModal" {{bind-attr disabled="isDeletePathsDisabled" }}>
                        <span class="glyphicon glyphicon-edit"></span> {{text "map_editPaths"}}
                    </button>
                    <button class="btn btn-default" data-toggle="modal" data-target="#confirmDeleteRoutesModal" {{bind-attr disabled="isDeletePathsDisabled" }}>
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </div>

            </div>
        </div>
    </div>

    <div class="mapContainer">
        <div id="tourEditMapRootElement"></div>
    </div>

    <div class="mouse-position-container">
        <div>{{mousePositionLat}}</div>
        <div>{{mousePositionLng}}</div>
    </div>

    <div class="modal fade" id="confirmDeleteRoutesModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Delete paths</h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the selected paths from the tour?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger pull-right" data-dismiss="modal" {{action "deleteRoutes"  }}>Delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editPathsModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Edit paths</h4>
                </div>
                <div class="modal-body">
                    <label for="inputAspect">Set type on selected path(s)</label>
                        {{#x-select value=draftPathType action="selectPathType" as |xs|}}
                            {{#each pathTypes as |pathType|}}
                                {{#xs.option value=pathType.value}} {{pathType.name}} {{/xs.option}}
                            {{/each}}
                        {{/x-select}}                        
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary pull-right" data-dismiss="modal" {{action "updatePathsType"  }}>Update</button>
                </div>
            </div>
        </div>
    </div>
</div>
