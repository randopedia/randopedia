
<div class="tour-details-component">
    <div class="hidden">{{!-- view.imageLoaded --}}</div>

    {{#if isDraft}}
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                This tour is a draft, it has not yet been published
            </div>
        </div>
    </div>
    {{else}}
    {{#if isInReview}}
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                This tour is in review, it has not yet been published
            </div>
        </div>
    </div>
    {{/if}}

    {{#if isIncomplete}}
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-warning" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                {{text "tour_markedAsIncomplete"}}
            </div>
        </div>
    </div>
    {{/if}}

    {{#if isDeleted}}
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                Tour is marked as deleted and will eventually be deleted from the database
            </div>
        </div>
    </div>
    {{/if}}
    {{/if}}

    <div class="row">
        <div class="col-sm-12">
            <h2>
                {{tour.name}} {{#if tour.elevationMax }} <span class="small">({{tour.elevationMax}}m)</span> {{/if}}

                {{#if isIncomplete}}
                <span class="small">
                    <a title="Tour is marked as incomplete" class="default-cursor">
                        <span class="glyphicon glyphicon-warning-sign danger"></span>
                    </a>
                </span>
                {{/if}}
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-lg-6">

            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_time"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{#if tour.timingMin}}{{tour.timingMin}}{{/if}}{{#if tour.timingMax}}-{{tour.timingMax}}{{/if}}h
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_elevation"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{#if tour.elevationGain}}
                    {{tour.elevationGain}}m &uarr;
                    {{/if}}
                    {{#if tour.elevationLoss}}
                    {{tour.elevationLoss}}m &darr;
                    {{/if}}
                </div>
            </div>

            {{#if tour.grade}}
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_grade"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    <a data-toggle="modal" data-target="#tourDetailsGradeGuideModal">{{resolveSelectName 'Grades' tour.grade}}</a>
                </div>
            </div>
            {{/if}}

            {{#if tour.degreesMax}}
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_steepness"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{tour.degreesMax}}&#176;
                </div>
            </div>
            {{/if}}

            {{#if tour.timeOfYearFrom}}
            {{#if tour.timeOfYearTo}}
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_season"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{resolveSelectName 'Months' tour.timeOfYearFrom}} - {{resolveSelectName 'Months' tour.timeOfYearTo}}
                </div>
            </div>
            {{/if}}
            {{/if}}

            {{#if tour.aspect}}
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label class="capitalize">{{text "tour_aspect"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{resolveSelectName 'Aspects' tour.aspect}}
                </div>
            </div>
            {{/if}}

            {{#if tour.tags}}
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-lg-3">
                    <label>{{text "tour_tags"}}:</label>
                </div>
                <div class="col-xs-7 col-sm-8 col-lg-9">
                    {{#each tag in tour.tags}}
                    {{#link-to 'tag' tour.tag}} #{{tour.tag}} {{/link-to}}
                    {{/each}}
                </div>
            </div>
            {{/if}}

        </div>

    </div>

    <div class="row">
        <div class="col-xs-12 spacer-y-bottom">
            {{#if isPublished}}
            {{#if hasMapData}}
            <button class="btn btn-primary" {{action "viewTourOnMap" }}>
                <i class="fa fa-map" aria-hidden="true"></i> <span>{{text "tour_viewTourOnMap"}}</span>
            </button>
            {{/if}}
            {{#if hasPaths}}
            <button class="btn btn-primary" {{action "downloadGpxFile" }}>
                <i class="fa fa-download" aria-hidden="true"></i> GPX
            </button>
            {{/if}}
            {{else}}
            {{#if hasMapData}}
            <div class="spacing">[View on map] <em>Tours are not available on the map until they are published.</em></div>
            {{/if}}
            {{/if}}

            {{#if login.isLoggedIn}}
            {{#link-to 'tour.edit' tour class="btn btn-secondary right"}}<i class="fa fa-pencil-square-o" aria-hidden="true"></i> <span>{{text "tour_editTour"}}</span>{{/link-to}}
            {{/if}}
        </div>
    </div>

    <div class="card">
        <h3 class="card-header">
            {{text "tour_accessPoint"}}
        </h3>
        <div class="card-block">
            {{tour.accessPoint}}
        </div>
    </div>

    <div class="card">
        <h3 class="card-header">
            {{text "tour_description"}}
        </h3>
        <div class="card-block">
            {{{markedItinerary}}}
        </div>
    </div>

    <div class="row">
        {{#if haveHazards}}
        <div class="col-xs-12 col-lg-6">
            <div class="card">
                <h3 class="card-header">
                    {{text "tour_hazards"}}
                </h3>
                <div class="card-block">
                    {{{tour.hazardsDescription}}}
                </div>
            </div>            
        </div>
        {{/if}}

        {{#if requiresTools}}
        <div class="col-xs-12 col-lg-6">
            <div class="card">
                <h3 class="card-header">
                    {{text "tour_mountaineering"}}
                </h3>
                <div class="card-block">
                    {{{tour.toolsDescription}}}
                </div>
            </div>            
        </div>
        {{/if}}
    </div>

    {{#if hasImages}}
    <div class="card">
        <h3 class="card-header">
            {{text "tour_images"}} <span class="small"> ({{tour.images.length}})</span>
        </h3>
        <div class="card-block">
            {{image-slider images=tour.images}}
        </div>
    </div>            
    {{/if}}

    <div class="card">
        <h3 class="card-header">
            {{text "tour_instagramFeed"}}
        </h3>
        <div class="card-block">
            {{instagram-feed point=summitPoint}}
        </div>
    </div>

    {{#if isPublished}}
    <div class="card">
        <h3 class="card-header">
            {{text "tour_discussionsAndTripReports"}}
        </h3>
        <div class="card-block">
            {{disqus-forum tour=tour}}
        </div>
    </div>  
    {{/if}}

    {{ partial "partials/footer"}}

    <div class="modal fade" id="tourDetailsGradeGuideModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">{{text "grades_header"}}</h4>
                </div>
                <div class="modal-body">
                    {{partial "partials/about-grades"}}
                </div>
            </div>
        </div>
    </div>

</div>