<div class="container">
    {{tag-cloud tags=tags}}
    <div class="card">
        <h3 class="card-header">
            {{text "header_statistics"}}
        </h3>
        <div class="card-block">
            {{text "dashboard_funfact1"}} <em>{{stats.publishedTours}}</em> {{text "dashboard_funfact2"}} <em>{{stats.totalGain}}</em> {{text "dashboard_funfact3"}} <em>{{stats.totalLoss}}</em> {{text "dashboard_funfact4"}}
        </div>
    </div>
    <div class="spacer-y"></div>
    <div class="card">
        <h3 class="card-header">
            {{text "dashboard_lastUpdatedTours"}}
        </h3>
        <div class="card-block">
            {{last-updated tours=tours}}
        </div>
    </div>

    {{#if login.isLoggedIn}}
    <div class="card">
        <h3 class="card-header">
            {{text "header_toursInReview"}}
        </h3>
        <div class="card-block">
            {{tours-in-review}}
        </div>
    </div>
    {{/if}}

</div>
